{
    "compilerOptions": {
        "module": "ESNext",
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "strict": true,
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "target": "ES2020",
        "outDir": "dist",
        "rootDir": "src",
        /* "noUnusedLocals": true, */
       /*  "noUnusedParameters": true, */
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        /* "declarationDir": "dist/types", */
    },

    "include": ["src/**/*"],
    "exclude": ["node_modules"]

}



